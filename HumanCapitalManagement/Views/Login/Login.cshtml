@model HumanCapitalManagement.Models.Login
@{
    ViewData["Title"] = "Login";
}

<link href="~/css/login-page.css" rel="stylesheet" />

<div class="text-center">
    <h2>Login</h2>
</div>

<form asp-controller="Login" asp-action="Index" method="post" class="form-signin">
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control" required autofocus>
    </div>

    <div class="form-group">
        <label asp-for="PasswordHash">Password</label>
        <input asp-for="PasswordHash" type="password" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

